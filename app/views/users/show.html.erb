<div>
  <div>
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table>
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
        </tr>
      </tbody>
    </table>
    <%= link_to "edit", edit_user_path(@user) %>
  </div>
  
  <div>
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% if @book.user == current_user %>
            <td>
              <%= link_to user_path do %>
                <%= image_tag @user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.opinion %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
