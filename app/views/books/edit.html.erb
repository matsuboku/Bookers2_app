<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<h1>Editing Book</h1>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
      <label for="title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="body">Opinion</label>
      <%= f.text_area :body %>
    </div>
<div class="actions"><%= f.submit 'Update Book' %></div>

<%= link_to 'Show', @book %>

|

<a class="back" href="/books">Back</a>
<% end %>