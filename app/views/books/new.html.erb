<h2>New book</h2>



  <!-- form_with部分 -->
  <%= form_with model: @book do |f| %>
    <div class="field">
      <label for="title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="opinion">Opinion</label>
      <%= f.text_area :opinion %>
    </div>
<div class="actions"><%= f.submit 'Create Book' %></div>

<% end %>
